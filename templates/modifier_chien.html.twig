{% extends 'base_template.html.twig' %}

{% block title %}Modifier un Chien{% endblock %}

{% block content %}
<h2>Modifier un Chien</h2>
<form action="index.php?action=update" method="post">
    <input type="hidden" name="id" value="{{ chien.id }}">
    <label for="nom">Nom :</label>
    <input type="text" id="nom" name="nom" value="{{ chien.nom }}">
    <label for="age">Âge :</label>
    <input type="number" id="age" name="age" value="{{ chien.age }}">
    <label for="race">Race :</label>
    <input type="text" id="race" name="race" value="{{ chien.race }}">
    <label for="photo">Photo (URL) :</label>
    <input type="text" id="photo" name="photo" value="{{ chien.photo }}">
    <button type="submit">Mettre à jour</button>
</form>
{% endblock %}
