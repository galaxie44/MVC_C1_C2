{% extends 'base_template.html.twig' %}

{% block title %}Liste des Chiens{% endblock %}

{% block content %}
    <h1>Liste des Chiens</h1>
    <a href ="index.php?controleur=refuge&methode=liste"> Liste des refuges <a>
    <table border="1" cellpadding="10">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Âge</th>
                <th>Race</th>
                <th>Refuge actuel</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for chien in chiens %}
            <tr>
                <td>{{ chien.nom }}</td>
                <td>{{ chien.age }}</td>
                <td>{{ chien.race }}</td>
                <td>
                    {% if chien.refuge_nom %}
                        {{ chien.refuge_nom }}
                    {% else %}
                        Aucun refuge
                    {% endif %}
                </td>
                <td>
                    {% if chien.photo %}
                        <img src="img/{{ chien.photo }}" alt="Photo de {{ chien.nom }}" style="width:100px;height:auto;">
                    {% else %}
                        Pas de photo
                    {% endif %}
                </td>
                <td>
                    <a href="index.php?controleur=chien&methode=modifier&id={{ chien.id }}">Modifier</a> | 
                    <a href="index.php?controleur=chien&methode=supprimer&id={{ chien.id }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce chien ?')">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <a href="index.php?controleur=chien&methode=creer">Ajouter un chien</a>
    
{% endblock %}
