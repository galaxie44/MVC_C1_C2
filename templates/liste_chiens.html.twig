

{% extends 'base_template.html.twig' %}
{% block title %}Lister des chiens{% endblock %}
{% block content %}
<body>
    <h1>Liste des Chiens</h1>
    <link rel="stylesheet" href="chemin/vers/styles.css">
    <a href ="index.php?controleur=refuge&methode=liste"> Liste des refuges <a>
    <table border="1" cellpadding="10">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Ã‚ge</th>
                <th>Race</th>
                <th>Photo</th>
                <th>Refuge</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for chien in chiens %}
            <tr>
                <td>{{ chien.nom }}</td>
                <td>{{ chien.age }}</td>
                <td>{{ chien.race }}</td>
                <td><img src="img/{{ chien.photo }}" alt="Photo du chien" width="100"></td>
                <td>
                    {% if chien.refuge_id %}
                        {% for refuge in refuges %}
                            {% if refuge.id == chien.refuge_id %}
                                {{ refuge.nom }}
                            {% endif %}
                        {% endfor %}
                    {% else %}
                        Aucun refuge
                    {% endif %}
                </td>
                <td>
                    <a href="index.php?controleur=chien&methode=modifier&id={{ chien.id }}">Modifier</a>
                    <a href="index.php?controleur=chien&methode=supprimer&action=delete&id={{ chien.id }}" onclick="return confirm('Voulez-vous vraiment supprimer ce chien ?');">Supprimer</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="index.php?controleur=chien&methode=creer">Ajouter un chien</a>
</body>
</html>
{% endblock %}